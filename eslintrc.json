{
  "extends": "next/core-web-vitals",
  "ignoreDuringBuilds": true,
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "semi": [2, "always"],
    "indent": [0, 4],
    "space-before-function-paren": [
      "error",
      { "anonymous": "always", "named": "never" }
    ],
    "multiline-ternary": ["off"],
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
